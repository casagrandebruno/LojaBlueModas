@page
@model BlueModas.UI.Pages.Checkout.CustomerInformationModel
@{
}


<div class="columns">
    <div class="column is-6">
        <form method="post">
            <div class="field">
                <p class="control">
                    <label class="label">Nome</label>
                    <input class="input" asp-for="CustomerInformation.Name" />
                </p>
                <span class="help is-warning" asp-validation-for="CustomerInformation.Name"></span>
            </div>
            <div class="field">
                <p class="control">
                    <label class="label">Email</label>
                    <input class="input" asp-for="CustomerInformation.Email" />
                </p>
                <span class="help is-warning" asp-validation-for="CustomerInformation.Email"></span>
            </div>
            <div class="field">
                <p class="control">
                    <label class="label">Telefone</label>
                    <input class="input" asp-for="CustomerInformation.PhoneNumber" />
                </p>
                <span class="help is-warning" asp-validation-for="CustomerInformation.PhoneNumber"></span>
            </div>
            <div class="field">
                <p class="control">
                    <label class="label">Endereço</label>
                    <input class="input" asp-for="CustomerInformation.Address" />
                </p>
                <span class="help is-warning" asp-validation-for="CustomerInformation.Address"></span>
            </div>
            <div class="field">
                <p class="control">
                    <label class="label">Bairro</label>
                    <input class="input" asp-for="CustomerInformation.Neighborhood" />
                </p>
                <span class="help is-warning" asp-validation-for="CustomerInformation.Neighborhood"></span>
            </div>
            <div class="field">
                <p class="control">
                    <label class="label">Cidade</label>
                    <input class="input" asp-for="CustomerInformation.City" />
                </p>
                <span class="help is-warning" asp-validation-for="CustomerInformation.City"></span>
            </div>
            <div class="field">
                <p class="control">
                    <label class="label">Estado</label>
                    <input class="input" asp-for="CustomerInformation.State" />
                </p>
                <span class="help is-warning" asp-validation-for="CustomerInformation.State"></span>
            </div>
            <div class="field">
                <p class="control">
                    <label class="label">CEP</label>
                    <input class="input" asp-for="CustomerInformation.ZipCode" />
                </p>
                <span class="help is-warning" asp-validation-for="CustomerInformation.ZipCode"></span>
            </div>
            <div class="field">
                <button class="button is-success" type="submit">Submit</button>
            </div>
        </form>
    </div>
    <div class="column is-6">
        <vc:cart view="Default"></vc:cart>
    </div>
</div>